            <TextView android:textSize="14dp" android:textColor="@color/text_primary" android:id="@+id/wifiPowerValue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="60%" android:layout_alignBaseline="@+id/wifiPowerLabel" app:layout_constraintBaseline_toBaselineOf="@+id/wifiPowerLabel" app:layout_constraintEnd_toEndOf="0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <TextView android:textSize="14dp" android:textColor="@color/text_primary" android:id="@+id/wifiSpeedLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/wifiSpeed" android:layout_alignBaseline="@+id/wifiLimitSpeedIcon" android:layout_marginStart="10dp" app:layout_constraintStart_toEndOf="@+id/wifiLimitSpeedIcon" app:layout_constraintTop_toTopOf="@+id/groupRadio"/>
            <com.raouf.routerchef.utils.fontAwesome.FATextView android:textSize="14dp" android:textColor="@color/text_primary" android:gravity="center_vertical" android:id="@+id/wifiLimitSpeedIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" app:layout_constraintBaseline_toBaselineOf="@+id/wifiSpeedLabel" app:layout_constraintStart_toStartOf="0"/>
            <RadioGroup android:orientation="vertical" android:id="@+id/groupRadio" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginStart="20dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintHorizontal_bias="0.5" app:layout_constraintStart_toEndOf="@+id/wifiSpeedLabel" app:layout_constraintTop_toTopOf="0">
