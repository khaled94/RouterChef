                <RadioButton android:textSize="13dp" android:textColor="#ff6d00" android:id="@+id/wifiLimit6Mbps" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:checked="false" android:minHeight="48dp" android:text="@string/sixMbps" android:hint="Enter your WiFi Password" android:ems="10" android:layout_weight="1" android:inputType="text" android:paddingStart="5dp" android:paddingEnd="5dp"/>
            </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:id="@+id/buttonsLayout" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintHorizontal_bias="0.5" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0">
                <Button android:textSize="14dp" android:id="@+id/showBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:text="@string/refresh" android:ems="5" android:layout_weight="1" android:onClick="showLimitSettings" android:layout_marginEnd="15dp" style="@style/buttonStyle"/>
                <Button android:textSize="14dp" android:id="@+id/applyBtn" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:text="@string/apply" android:ems="5" android:layout_weight="1" android:onClick="applyLimitSettings" android:textAlignment="center" android:layout_marginStart="15dp" style="@style/buttonStyle"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/admob_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:foregroundGravity="center_horizontal">
        <View android:id="@+id/divider14" android:background="?android:attr/listDivider" android:layout_width="match_parent" android:layout_height="1dp"/>
        <com.google.android.gms.ads.AdView android:id="@+id/LimitWiFiAdView" android:layout_width="wrap_content" android:layout_height="250dp" app:adSize="MEDIUM_RECTANGLE" app:adUnitId="ca-app-pub-6362221127909922/7902383702"/>
    </LinearLayout>
</RelativeLayout>
